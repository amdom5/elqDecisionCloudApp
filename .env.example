# Eloqua OAuth Configuration
ELOQUA_CONSUMER_KEY=your_consumer_key_here
ELOQUA_CONSUMER_SECRET=your_consumer_secret_here

# Eloqua API Configuration
ELOQUA_BASE_URL=https://secure.eloqua.com
ELOQUA_BULK_API_BASE=https://secure.eloqua.com/api/bulk/2.0

# Service Configuration
SERVICE_NAME=Eloqua Decision Service Framework
SERVICE_DESCRIPTION=A framework for building Eloqua AppCloud Decision Services
REQUIRES_CONFIGURATION=true
MAX_RECORDS_PER_NOTIFICATION=1000

# Security Configuration
ENABLE_OAUTH_VERIFICATION=true

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_DEBUG=false

# Storage Configuration
USE_PERSISTENT_STORAGE=false
STORAGE_BACKEND=memory

# Redis Configuration (if using Redis storage)
REDIS_URL=redis://localhost:6379

# Database Configuration (if using database storage)
DATABASE_URL=sqlite:///./decision_service.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MySQL: mysql://user:password@localhost/dbname